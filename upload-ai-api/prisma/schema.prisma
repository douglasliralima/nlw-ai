// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Nós não salvamos os vídeos diretamente no repositório geralmente utilizamos algum serviço como o
// amazon s3 ou o cloudflare R2(more free usage)
model Video {
  id            String   @id @default(uuid())
  name          String
  path          String
  transcription String?
  createdAt     DateTime @default(now())
}

model Prompt {
  id       String @id @default(uuid())
  title    String
  template String
}
